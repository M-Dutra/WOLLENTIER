<div class="container">
  <div>
  <h2>All Wollentiers</h2>
  </div>
<br>
  <div class="row row-cols-12 row-cols-md-4 g-4">
    <% @users.each do |user| %>
      <div class="card-group">
        <div class="card h-100 card-style" style="width: 18rem;">
          <#%= link_to user_path do %>
          <div class="card-body">
            <div class="card-badge">
            </div>
            <p class="card-title"><strong><%= user.first_name %></strong></p>
            <p class="card-title"><%= user.interests %></p>
            <img src="<%= user.profile_url %>" class="card-offer-logo avatar-bordered" />
          </div>
        <#% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>

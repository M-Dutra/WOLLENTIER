<%= simple_form_for offer do |f| %>
  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :category %>
    <%= f.input :location %>
    <%= f.input :district %>
    <%= f.input :start_date %>
    <%= f.input :frequency %>
    <%= f.input :contact_person %>
    <%= f.input :photo, as: :file%>
  </div>
    <div class="form-actions">
      <%= f.button :submit, class: "btn btn-primary" %>
    </div>
<% end %>

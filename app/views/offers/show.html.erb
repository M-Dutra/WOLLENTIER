<%= render "shared/banner" %>
<div class="container">
  <div class="row">

    <%# title and description %>
      <div class="col-8">
        <h1><%= @offer.title %></h1>
        <p><%= @offer.description %></p>
        <h6><%= @offer.category %></h4>
        <!-- Button trigger modal -->
        <% if user_signed_in? && current_user.volunteer? %>
        <button type="button" class="btn btn-primary mt-4" data-bs-toggle="modal" data-bs-target="#exampleModal">
          Apply for Job
        </button>
        <% end %>
      </div>
      <div class="col-4">
        <div class="d-flex flex-column mb-5">
          <div class="p-2 position-relative">
            <img class="position-absolute top-0 end-0" src="<%= @offer.organization.logo_url %>" />
            <h3><strong><%= @offer.organization.name %></strong></h3>
            <p>District: <%= @offer.district %></p>
            <p>Phone Number: <%= @offer.organization.user.phone_number %></p>
            <p>Email: <%= @offer.organization.user.email %></p>
          </div>
          <div class="p-2">
            <div class="row gutters-sm" id="map"
                style="width: 100%; height: 300px;"
                data-controller="map"
                data-map-markers-value="<%= @markers.to_json %>"
                data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"
                data-map-zoom-value=15>
            </div>
          </div>
        </div>
      </div>
  </div>
</div>







<!-- further recommendations-->
<section class="py-5 bg-light" style="margin-top: 50px">
  <div class="container px-4 px-lg-5 mt-5 fw-bolder"> <h1>Related Jobs</h1>
    <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
    </div>
  </div>
</section>

<!-- PUNDIT - PLEASE ADD THE BUTTONS BELOW TO THEIR RELATED DIV-->
<% if policy(@offer).edit? %>
  <%= link_to "Edit this offer", edit_offer_path(@offer) %> |
<% end %>
<%= button_to "Delete this offer", @offer, method: :delete if policy(@offer).destroy? %>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Job application</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= render "applications/form", application: @application %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>

<div class="banner-dashboard" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://www.umweltfestival.de/wp-content/uploads/2020/08/Berlin_GP-Logo_gruen-weiss_30cm-scaled.jpg);">
  <div class="container">
    <h1>Greenpeace</h1>
  </div>
</div>

<div class="sub-nav">
  <ul class="d-flex flex-row justify-content-start container align-items-center">
    <li class="nav-link mt-3 me-5"><p>Open jobs</p></li>
    <li class="nav-link mt-3 me-5"><p>Applications</p></li>
    <li class="nav-link mt-3"><p>Volunteers</p></li>
  </ul>
</div>

<div class="dash-content container">
  <div class="open-jobs-container">
    <div class="d-flex justify-content-between pt-3">
      <div><h3>Open jobs</h3></div>
      <div><%= link_to "Add offer", new_offer_path, class:"btn btn-primary" %></div>
    </div>
    <div class="row row-cols-12 row-cols-md-4 g-4 pt-3">
      <% @offers.each do |offer| %>
        <%= render partial: 'offers/card_offer', locals: { offer: offer}  %>
      <% end %>
    </div>

    <div class="applications-container">
      <% @applications.each do |application| %>
        <div class="application-container d-flex d-flex align-items-center justify-content-around">
          <img class="avatar" src="https://images.unsplash.com/photo-1535713875002-d1d0cf377fde?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2960&q=80">
          <p class="name"><% application %> </p>
          <p> <%= application.title %> </p>
          <p class="application-tag-user application-tag-<%= application.status.nil? ? "pending": application.status.downcase %>"><%= application.status.nil? ? "Pending": application.status.downcase  %></p>
        </div>
      <% end %>


    </div>

    <div class="volunteers-container">
    </div>

  </div>
</div>

<%= render "shared/banner" %>

<section id="main" class="hero d-flex align-items-center">
  <div class="container">
    <div class="row gy-4 d-flex justify-content-center">
      <div class="col-lg-6 order-2 order-lg-1 d-flex flex-column justify-content-center" data-controller="filter" data-filter-offers-value="<%= @offers.to_json %>">
        <h2 data-aos="fade-up">Connecting Wollentiers in Berlin</h2>
        <p data-aos="fade-up" data-aos-delay="100">We are here to connect dedicated people with jobs to help build a better world blablabla something super duper deep and meaningful about life in general and how great it is to help. </p>

        <%= form_with url: offers_path, method: :get, class: "d-flex align-items-stretch mb-3" do %>

          <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Enter ZIP code or keyword"
          %>
          <%= submit_tag "Search", class: "btn btn-primary" %>
        <% end %>
        <div class="d-flex justify-content-around">

          <%= form_with url: offers_path, method: :get do %>
          <%= hidden_field_tag :query, "Kids" %>
            <button class="btn btn-primary btn-circle btn-xl" id="Kids">
              <i class="fa-solid fa-children"></i>
              <br>
              <span>Kids</span>
            </button>
          <% end %>

          <%= form_with url: offers_path, method: :get do %>
          <%= hidden_field_tag :query, "Seniors" %>
            <button class="btn btn-primary btn-circle btn-xl" id="Seniors">
              <i class="fa-solid fa-person-cane"></i>
              <br>
              <span>Seniors</span>
            </button>
          <% end %>

          <%= form_with url: offers_path, method: :get do %>
          <%= hidden_field_tag :query, "Refugees" %>
            <button class="btn btn-primary btn-circle btn-xl" id="Refugees">
            <i class="fa-solid fa-handshake"></i>
              <br>
              <span>Refugees</span>
            </button>
          <% end %>

          <%= form_with url: offers_path, method: :get do %>
          <%= hidden_field_tag :query, "Health" %>
            <button class="btn btn-primary btn-circle btn-xl" id="Health">
            <i class="fa-solid fa-heart-pulse"></i>
              <br>
              <span>Health</span>
            </button>
          <% end %>

          <%= form_with url: offers_path, method: :get do %>
          <%= hidden_field_tag "all" %>
            <button class="btn btn-primary btn-circle btn-xl" id="all">
            <i class="fa-solid fa-rectangle-list"></i>
              <br>
              <span>Browse all</span>
            </button>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>

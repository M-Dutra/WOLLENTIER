  <body>
    <div class="page-container">
      <div class="navbar-container"><%= render "shared/navbar" %></div>
      <div class="content-container container mt-5"><%= yield %></div>
      <div class="footer"><%= render "shared/footer" %></div>
    </div>
  </body>


<div class="job-detail-container">
  <div class="container">
    <div class="row">
      <%# title and description %>
        <div class="col-8">
          <h1><%= @organization.name %></h1>
          <p class="job-description"><%= @organization.description %></p>
          <div>
            <h3 class="mt-5"><strong>Contact</strong></h3>
            <div class="mb-4">
              <p class="district-style">Phone</p>
              <p class="card-district contact-details" style="margin-top: -10px"><%= @organization.user.phone_number %></p>
            </div>
            <div class="mb-4">
              <p class="district-style">E-Mail</p>
              <p class="card-district contact-details"  style="margin-top: -10px"><%= @organization.user.email %></p>
            </div>
            <div class="mb-4">
              <p class="district-style">Website</p>
              <p class="card-district contact-details"  style="margin-top: -10px"><%= @organization.website %></p>
            </div>
            <div>
              <p class="district-style"  style="margin-top: -10px">Opening times</p>
              <p class="card-district volunteer-interests-badge"  style="margin-top: -10px"><%= @organization.opening_time %></p>
            </div>
          </div>
          <!-- Button trigger modal -->



        </div>
        <div class="col-4">
          <div class="d-flex flex-column mb-5">
            <div class="p-2 position-relative">
              <img class="organization-logo-show" src="<%= @organization.logo_url %>" />


            <div class="p-2">
              <div class="row gutters-sm" id="map"
                  style="width: 100%; height: 300px;"
                  data-controller="map"
                  data-map-markers-value="<%= @markers.to_json %>"
                  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"
                  data-map-zoom-value=15>
              </div>
            </div>
          </div>
        </div>
    </div>
  </div>
</div>
</div>



  <!-- further recommendations-->
  <section class="py-5">
    <div class="container">
      <h1 class="mt-3 mb-3">Current available jobs</h1>
      <div class="row row-cols-12 row-cols-md-4 g-4">
        <% @offers.each do |offer| %>
          <%= render partial: 'offers/card_offer', locals: { offer: offer}  %>
        <% end %>
      </div>
    </div>
  </section>

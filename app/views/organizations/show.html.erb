
<div class="job-detail-container">
  <div class="container">
    <div class="row">
      <%# title and description %>
        <div class="col-8">
          <h1><%= @organization.name %></h1>
          <p class="job-description"><%= @organization.description %></p>
          <!-- Button trigger modal -->



        </div>
        <div class="col-4">
          <div class="d-flex flex-column mb-5">
            <div class="p-2 position-relative">
              <img class="" src="<%= @organization.logo_url %>" />
              <h3><strong><%= @organization.name %></strong></h3>
              <p>Website: <%= @organization.website %></p>
              <p>Adress: <%= @organization.location %></p>
              <p>Phone Number: <%= @organization.user.phone_number %></p>
              <p>Email: <%= @organization.user.email %></p>
            </div>
            <div class="p-2">
              <div class="row gutters-sm" id="map"
                  style="width: 100%; height: 300px;"
                  data-controller="map"
                  data-map-markers-value="<%= @markers.to_json %>"
                  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"
                  data-map-zoom-value=15>
              </div>
            </div>
          </div>
        </div>
    </div>
  </div>
</div>



  <!-- further recommendations-->
  <section class="py-5">
    <div class="container">
      <h1 class="mt-3 mb-3">Current available jobs</h1>
      <div class="row row-cols-12 row-cols-md-4 g-4">
        <% @offers.each do |offer| %>
          <%= render partial: 'offers/card_offer', locals: { offer: offer}  %>
        <% end %>
      </div>
    </div>
  </section>
